@model CodingRound.Models.FeedbackResponse

@{
    ViewData["Title"] = "Create";
}

<html>
    <head>
    <style>
        body {
            background: linear-gradient(to bottom, #2b5876, #4e4376);
        }

        table {
            background-color: white;
            width: 800px;
            border-collapse: collapse;
            margin-top: 20px;
            width: 1000px;
            padding:30px;
        }
        tr{
            padding:30px;
            margin:20px;
            margin-left:50px
            
        }

        th {
            background-color: #f4f4f4;
            padding: 30px;
            margin: 20px;
            margin-left: 50px
        }
        h4{
            color:white;
        }
    </style>
    </head>
    <body>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <table>
                <tr>
                        <th colspan="2" class="text-center"><h4 style="color:black">Send Feedback</h4></th>
                </tr>
                <tr><th>
                <div class="form-group">
                    <label>Positive Emotions</label>
                    <div>
                        <input type="checkbox" name="PositiveEmotions" value="Adaptive" /> Adaptive <br />
                        <input type="checkbox" name="PositiveEmotions" value="Flexible" /> Flexible <br />
                        <input type="checkbox" name="PositiveEmotions" value="Team Player" /> Team Player <br />
                        <input type="checkbox" name="PositiveEmotions" value="Honest" /> Honest <br />
                        <input type="checkbox" name="PositiveEmotions" value="Punctual" /> Punctual <br />
                    </div>
                </div>
                <br />
                <div class="form-group">
                    <label>Improvement Areas</label>
                    <div>
                        <input type="checkbox" name="ImprovementAreas" value="Arrogant" /> Arrogant <br />
                        <input type="checkbox" name="ImprovementAreas" value="Lack of initiative" /> Lack of Initiative <br />
                        <input type="checkbox" name="ImprovementAreas" value="Lazy" /> Lazy <br />
                        <input type="checkbox" name="ImprovementAreas" value="Aggressive" /> Aggressive <br />
                        <input type="checkbox" name="ImprovementAreas" value="Poor Communication" /> Poor Communication <br />
                    </div>
                </div>
                </th>
                <th>
                <div class="form-group">
                    <label for="PositiveComments">Positive Feedback</label>
                    <textarea asp-for="PositiveComments" class="form-control" rows="4"></textarea>
                </div>
                <br />
                <div class="form-group">
                    <label for="ImprovementFeedback">Improvement Feedback</label>
                    <textarea asp-for="ImprovementFeedback" class="form-control" rows="4"></textarea>
                </div>
                 </th>
                 
                 </tr> <br /> <br />
                 <tr>
                    <td colspan="6" class="text-center">
                            <button type="submit" class="btn btn-primary">Submit</button> &nbsp;&nbsp;<span><h6>(Select at least one option to submit)</h6></span>
                        </td>
                </tr>
            </table>
            </form>
    </div>
</div>
</body>
</html>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
